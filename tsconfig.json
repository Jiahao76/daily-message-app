{
  "compilerOptions": {
    /* Language and runtime */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Project structure */
    "rootDir": ".",
    "outDir": "dist",

    /* Interop and imports */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type safety */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Build behavior */
    "sourceMap": true
  },
  "include": ["services/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}